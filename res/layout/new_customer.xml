<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_colour" >

    <EditText
        android:id="@+id/usr_name"
        android:layout_width="400dp"
        android:layout_height="79dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="250dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/form_field"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:hint="@string/name"
        android:textColor="@color/form_txt"
        android:textSize="27dp"
        android:textStyle="bold" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/usr_surname"
        android:layout_width="405dp"
        android:layout_height="79dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/form_field"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:hint="@string/surname"
        android:textColor="@color/form_txt"
        android:textSize="27dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/usr_number"
        android:layout_width="405dp"
        android:layout_height="79dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="250dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/form_field"
        android:ems="10"
        android:inputType="phone"
        android:paddingLeft="20dp"
        android:hint="@string/number"
        android:textColor="@color/form_txt"
        android:textSize="27dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/usr_license"
        android:layout_width="405dp"
        android:layout_height="79dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/form_field"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:hint="@string/license"
        android:textColor="@color/form_txt"
        android:textSize="27dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/usr_email"
        android:layout_width="405dp"
        android:layout_height="79dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="250dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/form_field"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:hint="@string/email"
        android:textColor="@color/form_txt"
        android:textSize="27dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/usr_garage"
        android:layout_width="405dp"
        android:layout_height="79dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/form_field"
        android:prompt="@string/garage_locations" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="539dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="415dp"
        android:gravity="center_vertical|center_horizontal"
        android:hint="@string/newcust_txt"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/txt_colour"
        android:textStyle="italic"
        android:textSize="22dp" />

    <Button
        android:id="@+id/nwusr_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="520dp"
        android:background="@drawable/custom_btn"
        android:text="@string/cnt"
        android:textColor="@color/btn_txt_colour"
        android:textSize="27dp"
        android:textStyle="bold" />

</FrameLayout>